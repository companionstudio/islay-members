- breadcrumb('Series')

- filter_nav(:members, 'Enabled')
- filter_nav(:members, 'Disabled', 'disabled')
- filter_nav(:members, 'All', 'all')

= content do
  %table.fixed-header(cellpadding=0 cellspacing=0)
    %thead
      %th{:colspan => 2} Name
      %th Updated At
    %tbody
      - @series.each do |series|
        %tr
          %td.status
            = series.active?
          %td
            = link_to(series.name, path(:edit, series), :class => 'title')
          %td
            %span.time= series.updated_at

= footer do
  = new_button('Series', :series)
